  <!-- Cases -->
  <record id="case_1" model="legal.case">
    <field name="client_id" ref="partner_client_anita"/>
    <field name="responsible_lawyer_id" ref="partner_lawyer_raj"/>
    <field name="case_type">civil</field>
    <field name="open_date">2025-05-15</field>
    <field name="fixed_fee_amount">20000.00</field>
    <field name="stage">active</field>
  </record>
  <record id="case_2" model="legal.case">
    <field name="client_id" ref="partner_client_deepak"/>
    <field name="responsible_lawyer_id" ref="partner_lawyer_sneha"/>
    <field name="case_type">property</field>
    <field name="open_date">2025-03-10</field>
    <field name="fixed_fee_amount">30000.00</field>
    <field name="stage">closed</field>
    <field name="close_date">2025-07-01</field>
  </record>
  <record id="case_3" model="legal.case">
    <field name="client_id" ref="partner_client_ekta"/>
    <field name="responsible_lawyer_id" ref="partner_lawyer_amit"/>
    <field name="case_type">criminal</field>
    <field name="open_date">2025-01-20</field>
    <field name="stage">intake</field>
  </record>
  <record id="case_4" model="legal.case">
    <field name="client_id" ref="partner_client_farhan"/>
    <field name="responsible_lawyer_id" ref="partner_lawyer_raj"/>
    <field name="case_type">family</field>
    <field name="open_date">2025-08-05</field>
    <field name="fixed_fee_amount">15000.00</field>
    <field name="stage">active</field>
  </record>
  <record id="case_5" model="legal.case">
    <field name="client_id" ref="partner_client_anita"/>
    <field name="responsible_lawyer_id" ref="partner_lawyer_sneha"/>
    <field name="case_type">corporate</field>
    <field name="open_date">2024-12-01</field>
    <field name="fixed_fee_amount">50000.00</field>
    <field name="stage">closed</field>
    <field name="close_date">2025-02-15</field>
  </record>

  <!-- Hearings -->
  <!-- Delhi High Court hearings -->
  <record id="hearing_1" model="legal.hearing">
    <field name="name">First Hearing - Anita vs. Landlord</field>
    <field name="case_id" ref="case_1"/>
    <field name="date_start">2025-08-10 11:00:00</field>
    <field name="date_end">2025-08-10 13:00:00</field>
    <field name="location">Delhi High Court</field>
    <field name="status">planned</field>
  </record>
  <record id="hearing_2" model="legal.hearing">
    <field name="name">Property Dispute Hearing</field>
    <field name="case_id" ref="case_2"/>
    <field name="date_start">2025-06-05 10:00:00</field>
    <field name="date_end">2025-06-05 12:00:00</field>
    <field name="location">Mumbai District Court</field>
    <field name="status">held</field>
  </record>
  <record id="hearing_3" model="legal.hearing">
    <field name="name">Criminal Case Plea</field>
    <field name="case_id" ref="case_3"/>
    <field name="date_start">2025-10-01 09:30:00</field>
    <field name="date_end">2025-10-01 11:30:00</field>
    <field name="location">Kolkata Sessions Court</field>
    <field name="status">planned</field>
  </record>
  <!-- Additional hearings -->
  <record id="hearing_4" model="legal.hearing">
    <field name="name">Family Settlement Discussion</field>
    <field name="case_id" ref="case_4"/>
    <field name="date_start">2025-09-20 14:00:00</field>
    <field name="date_end">2025-09-20 16:00:00</field>
    <field name="location">Bangalore Family Court</field>
    <field name="status">planned</field>
  </record>
  <record id="hearing_5" model="legal.hearing">
    <field name="name">Corporate Agreement Review</field>
    <field name="case_id" ref="case_5"/>
    <field name="date_start">2025-01-15 10:00:00</field>
    <field name="date_end">2025-01-15 12:00:00</field>
    <field name="location">Chennai Commercial Court</field>
    <field name="status">held</field>
  </record>

  <!-- Sample Invoice (INR) -->
  <record id="invoice_demo_1" model="account.move">
    <field name="partner_id" ref="partner_client_deepak"/>
    <field name="move_type">out_invoice</field>
    <field name="legal_case_id" ref="case_2"/>
    <field name="invoice_line_ids" eval="[
      (0, 0, {'name': 'Property Dispute Fee', 'quantity':1, 'price_unit':30000.00})
    ]"/>
  </record>

  <!-- Sample Attachment -->
  <record id="attachment_demo_1" model="ir.attachment">
    <field name="name">Lease_Agreement.pdf</field>
    <field name="res_model">legal.case</field>
    <field name="res_id" ref="case_1"/>
    <field name="datas_fname">lease_agreement.pdf</field>
    <field name="mimetype">application/pdf</field>
  </record>

</odoo>
