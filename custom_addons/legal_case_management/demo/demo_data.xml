  </record>
  <record id="partner_lawyer_sneha" model="res.partner">
    <field name="name">Sneha Patel</field>
    <field name="is_lawyer" eval="True"/>
    <field name="email">sneha.patel@lawfirm.in</field>
    <field name="phone">+91-91234-56789</field>
