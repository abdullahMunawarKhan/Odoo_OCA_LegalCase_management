  <!-- Clients (Indian Names) -->
  <record id="partner_client_anita" model="res.partner">
    <field name="name">Anita Reddy</field>
    <field name="is_client" eval="True"/>
    <field name="email">anita.reddy@example.com</field>
    <field name="phone">+91-98765-00123</field>
  </record>
  <record id="partner_client_deepak" model="res.partner">
    <field name="name">Deepak Singh</field>
    <field name="is_client" eval="True"/>
    <field name="email">deepak.singh@example.com</field>
    <field name="phone">+91-98765-00456</field>
  </record>
  <record id="partner_client_ekta" model="res.partner">
    <field name="name">Ekta Mehta</field>
    <field name="is_client" eval="True"/>
    <field name="email">ekta.mehta@example.com</field>
    <field name="phone">+91-98765-00789</field>
  </record>
